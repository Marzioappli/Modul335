<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a8b8c4">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pfadi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pfadi Winterthur ist ein Schweizer Handballverein mit Sitz in Winterthur, der 1953 gegründet wurde. Der Verein hat eine reiche Geschichte im Schweizer Handball und ist für seine langjährige Rivalität mit den Kadetten Schaffhausen bekannt. Pfadi Winterthur hat mehrere nationale Meisterschaften gewonnen und ist für seine starke Jugendförderung und die Entwicklung von Handballtalenten in der Schweiz anerkannt. Der Verein hat auch in internationalen Wettbewerben, wie der EHF European League, teilgenommen und die Schweiz auf der internationalen Handballbühne vertreten. Rekordspieler: Jae-Wong Kang"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-140dp"
        android:textColor="@color/black"
        android:textSize="18sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Pfadi Winterthur"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/backarrow"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="36dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/back"
        android:src="@drawable/scaled_pfeil"
        android:visibility="visible"
        tools:visibility="visible" />
</RelativeLayout>
